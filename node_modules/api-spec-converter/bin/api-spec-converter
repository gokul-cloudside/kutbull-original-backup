#!/usr/bin/env node
'use strict';

var Program = require('commander');
var Package = require(__dirname + '/../package.json');
var Converter = require('..');

Program
  .version(Package.version)
  .option('-f, --from <type>', 'Specifies type to convert')
  .option('-t, --to <type>', 'Specifies output type')
  .option('-c, --check', 'Check if result is valid spec')
  .arguments('<URL>')
  .action(main)
  .parse(process.argv);

function main(url, options) {
  if (!options.from)
    Program.help();

  if (!options.to)
    options.to = options.from;

  Converter.convert({
    source: url,
    from: options.from,
    to: options.to
  }, function(err, spec) {
    if (err) {
       console.error(err.stack);
       process.exit(255);
    }

    console.log(spec.stringify())
    if (options.check) {
      spec.validate(function (errors, warnings) {
        if (errors) {
          process.exitCode = 255;
          console.error('\nErrors:\n');
          console.error(JSON.stringify(errors, null, 2));
        }
        if (warnings) {
          console.error('\nWarnings:\n');
          console.error(JSON.stringify(warnings, null, 2));
        }
      });
    }
  });
}
